{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "src",
    "paths": {
      "capture-core": ["./core_modules/capture-core"],
      "capture-ui": ["./core_modules/capture-ui"],
      "capture-core-utils": ["./core_modules/capture-core-utils"],
      "@dhis2/rules-engine-javascript": ["../packages/rules-engine/src"]
    }
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "build",
    "buildzip",
    "coverage",
    "docs",
    "flow",
    "flow-typed",
    "i18n",
    "public"
  ]
} 